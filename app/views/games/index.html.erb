<h1 class="text-center">History</h1>
<hr>
<table class="table">
  <thead>
  <tr>
    <th>Date played</th>
    <th>Opponent</th>
    <th>Score</th>
    <th>Result</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @games.each do |game| %>
    <tr>
      <td><%= game.date_played %></td>
      <td><%= game.opponent%></td>
      <td><%= score(game)%></td>
      <td><%= game.result(current_user.id) %></td>
    </tr>
  <% end %>
  </tbody>
</table>